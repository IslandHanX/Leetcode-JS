/**
 * @param {string} s
 * @return {boolean}
 */
var validPalindrome = function(s) {
    const isPal = (l, r) => {
        while (l < r) {
            if (s[l] !== s[r]) return false;
            l++; r--;
        }
        return true;
    }
    let i = 0, j = s.length - 1;
    while (i < j)
    {
        if (s[i] === s[j])
        {    i++; j--;}
        else
            return isPal(i + 1, j) || isPal(i, j - 1);
    }
    return true;
};