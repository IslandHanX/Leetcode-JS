/**
 * @param {string} sentence
 * @return {string}
 */
var toGoatLatin = function(sentence) {
    let words = sentence.split(' ');
    const vowels = new Set(['a','e','i','o','u','A','E','I','O','U'])
    for (let i = 0; i < words.length; i++)
    {
        let w = words[i];
        if (vowels.has(w[0]))
            w = w + 'ma';
        else
            w = w.slice(1) + w[0] + 'ma';
        w += 'a'.repeat(i + 1);
        words[i] = w;
    }
    return words.join(' ');
};