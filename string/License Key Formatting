/**
 * @param {string} s
 * @param {number} k
 * @return {string}
 */
var licenseKeyFormatting = function(s, k) {
    const res = [];
    let cnt = 0;
    for (let i = s.length - 1; i >= 0; i--)
    {
        const ch = s[i];
        if (ch === '-')
            continue;
        res.push(ch.toUpperCase());
        cnt++;
        if (cnt === k)
        {
            res.push('-');
            cnt = 0;
        }
    }
    if (res.length && res[res.length - 1] === '-')
        res.pop();
    return res.reverse().join('');
};