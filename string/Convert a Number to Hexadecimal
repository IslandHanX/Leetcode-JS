/**
 * @param {number} num
 * @return {string}
 */
var toHex = function(num) {
    if (num === 0)
        return "0";
    let s = "0123456789abcdef";
    let res = "";

    let n = num >>> 0;
    
    while (n > 0)
    {
        res = s[(n % 16)] + res;
        n = Math.floor(n / 16);
    }
    return res;
};