/**
 * @param {number} num
 * @return {string}
 */
var convertToBase7 = function(num) {
    if (num === 0) return "0";
    const sign = num < 0 ? "-" : "";
    let n = Math.abs(num);
    let res = '';
    while (n > 0)
    {
        res = (n % 7) + res;
        n = Math.floor(n / 7);
    }
    return sign + res;
};