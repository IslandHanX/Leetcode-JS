/**
 * @param {number[]} nums
 * @return {number[]}
 */
var sortArrayByParityII = function(nums) {
    const n = nums.length;
    const ans = new Array(n);
    let ei = 0, oi = 1;
    for (const x of nums)
    {
        if ((x & 1) === 0)
        {
            ans[ei] = x;
            ei += 2;
        } else {
            ans[oi] = x;
            oi += 2;
        }
    }
    return ans;
};