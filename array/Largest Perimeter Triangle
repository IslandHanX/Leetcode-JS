/**
 * @param {number[]} nums
 * @return {number}
 */
var largestPerimeter = function(nums) {
    nums.sort((a, b) => b - a);
    for (let i = 0; i < nums.length; i++)
    {
        const a = nums[i], b = nums[i + 1], c = nums[i + 2];
        if (b + c > a)
            return a + b + c;
    }
    return 0;
};
// 数组 贪心 排序
// 排序之后第一个满足条件的就是最大的