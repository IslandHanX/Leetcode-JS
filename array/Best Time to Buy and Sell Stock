/**
 * @param {number[]} prices
 * @return {number}
 */
var maxProfit = function(prices) {
    let max = 0;
    let min = Infinity;
    for (let i = 0; i < prices.length; i++)
    {
        if (prices[i] < min)
            min = prices[i];
        else if (prices[i] - min > max) 
            max = prices[i] - min;
    }
	// 从if 和 else if上隐式控制了时间顺序
    return max;
};