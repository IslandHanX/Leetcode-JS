/**
 * @param {number[]} nums
 * @return {number}
 */
var findLHS = function(nums) {
    const cnt = new Map();
    for (const x of nums)
        cnt.set(x, (cnt.get(x) || 0) + 1);
    
    let ans = 0;
    for (const [x, c] of cnt)
    {
        if (cnt.has(x + 1))
            ans = Math.max(ans, c + cnt.get(x + 1));
    }
    return ans;
};