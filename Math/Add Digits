/**
 * @param {number} num
 * @return {number}
 */
var addDigits = function(num) {
    if (num === 0)
        return 0;
    const calcD = (n) => {
        let sum = 0;
        while (n > 0)
        {
            sum += n % 10;
            n = Math.trunc(n / 10);
        }
        return sum;
    }
    while (num >= 10)
    {
        num = calcD(num);
    }
    return num;
};