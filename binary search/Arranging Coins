/**
 * @param {number} n
 * @return {number}
 */
var arrangeCoins = function(n) {
    let k = 0;
    let l = 0, r = n, ans = 0;
    while (l <= r)
    {
        const m = Math.floor((l + r) / 2);
        const coins = (m * (m + 1)) / 2;
        if (coins === n)
            return m;
        if (coins < n)
        {
            ans = m;
            l = m + 1;
        }
        else
            r = m - 1;
    }
    return ans;
};