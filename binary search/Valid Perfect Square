/**
 * @param {number} num
 * @return {boolean}
 */
var isPerfectSquare = function(num) {
    if (num < 2)
        return true;
    let l = 1, r = num;
    while (l <= r)
    {
        let mid = Math.floor((l + r) / 2);
        const cur = mid * mid;
        if (num === cur)
            return true;
        if (num > cur)
            l = mid + 1;
        else
            r = mid - 1;
    }
    return false;
};